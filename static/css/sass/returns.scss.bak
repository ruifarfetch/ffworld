@import '_variables';
@import '_mixins';


  .icon-circle-info{
    position: relative;
    cursor: pointer;
    @include button_circle(center, 0px , 50%);
    background-color: $color-mediumGrey;
    color: $color-white;
    float: left;
    top: 6px;
    span:before{
      position: relative;
      font-size: 1.25em;
      line-height:1.8em;
    }
  }

// icons
.icon-info-fill{
  font-size:3em;
  line-height: 1em;
  color: #aaa;
  cursor: pointer;
}

.account-returns_item{
  border-bottom: 1px solid $color-lightGrey;
  padding-bottom: 20px;
}

.account-returns_steps{
  .col4>div{
    border: 1px solid $color-platinum;
    padding: 20px 10px;
    height: 300px;
    @media (max-width:$fablet ) {
      margin-bottom:10px;
    }
  }

  .icon-box-arrow-big, .icon-box-open{
    font-size: 10em;
    color: $color-mediumGrey;
  }

  .account-returns-stepsIcon{
    text-align: center;
    position: absolute;
    top: 25%;
    width: 100%;
    left: 0;
  }
}

.account-steps-container-ups {
  .returns-steps {
    width:100%;
    border:none
  }
  .returns-steps-address {
    position:absolute;right:0;
  }
  .returns-steps_inStore {
    width:50%;
  }
}

.account-dhl_loader{
  position: absolute;
  background: #f5f5f5;
  width: 95%;
  height: 100%;
  opacity: .7;
  z-index: 9;
  >div{
    position: relative;
    text-align: center;
    top: 20%;
    -webkit-animation:loader 2s infinite;
    -moz-animation:loader 2s infinite;
    animation:loader 2s infinite;
  }
}

.account-returns-blocked{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 99;
  background-color: $color-white;
  opacity: .8;
}

@-moz-keyframes loader {
  0% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}
@-webkit-keyframes loader {
  0% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

@keyframes loader {
  0% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

@media(max-width: $fablet){
  .icon-circle-info{
    float: right;
  }
}

.icon-box-unchecked {
  background-color: whitesmoke;
  -webkit-box-shadow: 1px 1px 0px #cccccc inset;
  -moz-box-shadow: 1px 1px 0px #cccccc inset;
  box-shadow: 1px 1px 0px #cccccc inset; }

.icon-radio-unchecked {
  -webkit-box-shadow: 1px 1px 0px #cccccc inset;
  -moz-box-shadow: 1px 1px 0px #cccccc inset;
  box-shadow: 1px 1px 0px #cccccc inset;
  background-color: whitesmoke; }

.no-touch .icon-box-checked:hover, .no-touch .icon-box-unchecked:hover, .no-touch .icon-radio-checked:hover, .no-touch .icon-radio-unchecked:hover {
  -webkit-box-shadow: 1px 1px 0px #cccccc inset;
  -moz-box-shadow: 1px 1px 0px #cccccc inset;
  box-shadow: 1px 1px 0px #cccccc inset;
  background-color: whitesmoke; }

.icon-box-checked, .icon-radio-checked {
  -webkit-box-shadow: 1px 1px 0px #cccccc inset;
  -moz-box-shadow: 1px 1px 0px #cccccc inset;
  box-shadow: 1px 1px 0px #cccccc inset;
  background-color: whitesmoke; }

.account-returns-type-option-InStore {
  @media(max-width: $mobile){
    padding-top:10px;
    padding-left:0px;
  }
}